<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">tiger</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/Shopping</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.default_schema">Shopping</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        
        <mapping class="com.me.pojo.Address" />
        <mapping class="com.me.pojo.Depot" />
        <mapping class="com.me.pojo.DepotOrderDetails" />
        <mapping class="com.me.pojo.DepotOrderItem" />
        <mapping class="com.me.pojo.Manufacturer" />
        <mapping class="com.me.pojo.OrderDetails" />
        <mapping class="com.me.pojo.OrderItem" />
        <mapping class="com.me.pojo.Person" />
        <mapping class="com.me.pojo.Product" />
        <mapping class="com.me.pojo.StockItem" />
        <mapping class="com.me.pojo.UserAccount" />
    </session-factory>
</hibernate-configuration>
